extends ../layout/mainTemplate
include ../modules/headerTemplate

block title
    | Simple Game

block header
    +page-title('Вход')

block content
    div
        form#signinForm.info-block(method='POST')
            div.form-group Почта:
                input#email(type='email', placeholder='name@email.com', name='email')
            div.form-group Пароль:
                input#password(type='password', placeholder='Password', name='password')

            button#signinButton.button.hvr-grow(type='submit') Войти

    a.button-menu.hvr-grow#backtomenu(name='menu' href='/') Назад

    div.warn-title #{statusText}

