extends ../layout/main
include ../modules/header

block title
    | Simple Game

block header
    +pageTitle('Sign in')

block content
    div
        form(method='POST' action='/login')#siginForm
            div.form-group Email:
                input#email(type='email', placeholder='name@email.com' name='email')

            div.form-group Password:
                input#password(type='password', placeholder='Password', name='password')

                button(type='submit') Sign in

    a.button-menu(name='menu' href='') Back to menu

